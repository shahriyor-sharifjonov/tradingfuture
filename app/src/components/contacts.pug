mixin contacts()
  .contacts
    .contacts__body.container 
      h2.contacts__title Контакты
      .contacts__row 
        .contacts__item 
          .contacts__gradient
          .contacts__item-top 
            h3.contacts__item-title E-MAIL
            img(src="images/email.svg", alt="email").contacts__item-img
          p.contacts__item-p Lorem ipsum dolor
        .contacts__item 
          .contacts__gradient
          .contacts__item-top 
            h3.contacts__item-title TELEGRAM
            img(src="images/paper-plane.svg", alt="email").contacts__item-img
          p.contacts__item-p Lorem ipsum dolor
      .contacts__middle 
        .contacts__middle-left 
          h2.contacts__middle-title Вопросы и ответы
          .mydropdown
            button(onclick="mydropdown(this)").mydropdown__button Lorem ipsum dolor sit amet?
            .mydropdown__content 
              
        img(src="images/loupe.webp", alt="loupe").contacts__middle-img
        .contacts__middle
      .contacts__bottom 
        .contacts__bottom-left 
          img(src="images/form.svg", alt="robot").contacts__bottom-img
        .contacts__bottom-right
          h2.contacts__bottom-title Остались вопросы?
          p.contacts__bottom-p В течении 30 минут наш менеджер ответит на все ваши вопросы
          form(action="").contacts__form
            .contacts__form-row 
              .contacts__input-parent(data-value="Имя: ")
                input(type="text").contacts__input.pl-sm
              .contacts__input-parent(data-value="E-mail: ").ml20
                input(type="email").contacts__input.pl-70
            .contacts__input-parent(data-value="Ваш вопрос: ").mt20
              textarea(name="", cols="30", rows="10").contacts__textarea
            button(type="submit").contacts__btn Отправить